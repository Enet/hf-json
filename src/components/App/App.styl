.app
    display: flex
    flex-flow: row nowrap
    height: 100%

.appLeft,
.appRight
    flex: 1

.appLeft
    padding: 16px
    box-sizing: border-box

.appRight
    font-size: 0

.appTextDataTextarea
    padding: 16px
    size: 100%
    border: none
    background: lightskyblue
    outline: none
    font-family: monospace
    font-size: 16px
    resize: none
    box-sizing: border-box
